<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="190.0dip">

    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_alertdialog">

        <ProgressBar
            android:id="@+id/center_process_bar"
            style="@style/ProgressBar.Loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/top_process_promot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/center_process_bar"
            android:gravity="left|center"
            android:maxWidth="95.0dip"
            android:paddingLeft="5.0dip"
            android:text="@string/lib_str1"
            android:textColor="#fff8f8f8"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="0.5dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_toRightOf="@id/top_process_promot"
            android:background="@color/color_ff727272"
            android:minHeight="55.0dip" />

        <ImageButton
            android:id="@+id/imgbtn_guanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2.0dip"
            android:layout_toRightOf="@id/tv_line"
            android:background="@drawable/icon_close_whilte" />
    </RelativeLayout>
</RelativeLayout>
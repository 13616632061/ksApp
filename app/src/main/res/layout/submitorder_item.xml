<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:id="@+id/layout_top"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:id="@+id/tv_order"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:text="订单:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_odernum"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_order"
            android:text="123456789"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_ordertime"
            android:layout_marginRight="10dp"
            android:text="2017-04-20 18:18"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.ui.listview.PagingListView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/layout_top"
        android:id="@+id/list_submitorder_item"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.ui.listview.PagingListView>
    <RelativeLayout
        android:layout_below="@+id/list_submitorder_item"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:id="@+id/tv_total"
            android:paddingLeft="80dp"
            android:layout_centerHorizontal="true"
            android:text="合计:"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_total_price_item"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_total"
            android:textColor="@color/primary_color"
            android:text="￥8.00"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
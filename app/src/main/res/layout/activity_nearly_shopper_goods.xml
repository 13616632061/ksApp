<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nearly_shopper_goods"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ui.ks.NearlyShopperGoodsActivity">
    <include
        android:visibility="gone"
        layout="@layout/toolbar" android:id="@id/toolbar_layout" />
    <com.flipboard.bottomsheet.BottomSheetLayout
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/toolbar_layout"
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_shopperbackground"
        android:layout_width="match_parent"
        android:layout_height="156dp">
        <ImageView
            android:id="@+id/iv_shopperbackground"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="156dp" />
        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_back"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_back_white"/>
            <RelativeLayout
                android:id="@+id/layout_search"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_marginRight="55dp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_search"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:hint="@string/str115"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/edit_corner_whitle"
                    android:drawableLeft="@drawable/icon_search"
                    android:paddingLeft="15dp"
                    android:drawablePadding="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_enshrine"
                android:background="@drawable/collect"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="23dp"
                android:layout_height="23dp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_close"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_close"
                android:layout_marginRight="65dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/close"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </RelativeLayout>
        <ImageView
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_below="@+id/layout_title"
            android:id="@+id/iv_shopperlogo"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_below="@+id/layout_title"
            android:id="@+id/tv_shoppername"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="110dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="宝和苑便利店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/layout_shopperbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <com.ui.listview.PagingListView
                android:background="@android:color/transparent"
                android:listSelector="@drawable/select_layout_goodsortitem"
                android:id="@+id/list_sort"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:dividerHeight="1dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollingCache="true"
                android:smoothScrollbar="false"
                android:scrollbars="none"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <com.ui.listview.PinnedHeaderListView
                android:background="@android:color/transparent"
                android:listSelector="@android:color/transparent"
                android:id="@+id/list_goods"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:dividerHeight="1dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollingCache="true"
                android:smoothScrollbar="false"
                android:scrollbars="none"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
    </com.flipboard.bottomsheet.BottomSheetLayout>
    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/layout_settleaccounts"
            android:background="@drawable/select_remove_red_background"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:text="加入购物车"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_rule"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:text="￥500起送"
            android:layout_toLeftOf="@+id/layout_settleaccounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_totalprice"
            android:textColor="@color/primary_color"
            android:layout_marginLeft="75dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_shoppingcar"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shoppingcar_gray"
        android:layout_width="55dp"
        android:layout_height="55dp" />
    <Button
        android:visibility="gone"
        android:id="@+id/btn_shopping_num"
        android:textColor="#ffffff"
        android:text=""
        android:textSize="12sp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_circle_red"
        android:layout_width="20dp"
        android:layout_height="20dp" />
</RelativeLayout>

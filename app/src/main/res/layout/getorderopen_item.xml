<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:baselineAligned="false">
    <RelativeLayout
        android:id="@+id/layout_order"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:id="@+id/layout_choose"
            android:layout_width="50dp"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_choose"
            android:clickable="false"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/gray_gou"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_notes"
            android:textColor="@color/primary_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout_choose"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="45dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_notes"
            android:layout_toLeftOf="@+id/iv_drop"
            android:textSize="16sp"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_drop"
            android:clickable="false"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/righit"
            android:layout_width="10dp"
            android:layout_height="10dp" />
</RelativeLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:visibility="gone"
        android:id="@+id/layout_open"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.ui.listview.PagingListView
        android:background="@android:color/transparent"
        android:listSelector="@drawable/select_layout_goodsortitem"
        android:id="@+id/list_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollingCache="true"
        android:smoothScrollbar="false"
        android:scrollbars="none"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/layout_remove"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:clickable="false"
                android:background="@drawable/clear"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:clickable="false"
                android:layout_marginLeft="15dp"
                android:textColor="#adadad"
                android:textSize="14sp"
                android:text="@string/str45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_edit"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:background="@drawable/btn_corner_orange"
            android:textColor="#ffffff"
            android:text="@string/str46"
            android:layout_marginBottom="2dp"
            android:layout_width="70dp"
            android:layout_height="32dp" />
        <Button
            android:textColor="#adadad"
            android:id="@+id/btn_print"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_corner_whitle"
            android:textSize="14sp"
            android:text="@string/str47"
            android:layout_toLeftOf="@+id/btn_edit"
            android:layout_width="70dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
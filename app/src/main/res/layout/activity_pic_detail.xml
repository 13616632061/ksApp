<RelativeLayout
    android:background="@color/black"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/news_image_news_detail_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.material.widget.CircularProgress
            android:id="@+id/progress_large"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            app:circular_progress_size="Normal"
            android:layout_centerInParent="true"/>
        <com.ui.util.HackyViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@+id/news_image_news_detail_buttom_introduce_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:id="@+id/news_image_news_detail_introduce_title_layout"
                android:background="#99000000"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="10dp">
                <TextView
                    android:textSize="17.0dip"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/news_image_news_detail_introduce_title_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_toLeftOf="@+id/news_image_news_detail_introduce_size"/>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/white"
                    android:id="@+id/news_image_news_detail_introduce_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:paddingLeft="10.0dip"
                android:paddingBottom="10.0dip"
                android:paddingRight="10.0dip"
                android:background="#99000000"
                android:layout_below="@id/news_image_news_detail_introduce_title_layout">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/news_image_news_detail_introduce_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  />
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/toolbar_black" android:id="@id/toolbar_layout" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_submit_edit_bnak_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="?gray_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar" android:id="@id/toolbar_layout" />
    <LinearLayout
        android:layout_below="@id/toolbar_layout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="@drawable/selector_cell_left_blank"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_component_height">
        <TextView
            android:textSize="@dimen/text_size_list"
            android:textColor="@color/text_color"
            android:id="@+id/tv_khrname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:minWidth="96.0dip"
            android:text="@string/str200"
            android:layout_centerVertical="true" />
        <TextView
            android:textSize="@dimen/text_size_list"
            android:textColor="@color/text_color"
            android:id="@+id/tv_khr"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:paddingLeft="10.0dip"
            android:singleLine="true"
            android:layout_toRightOf="@id/tv_khrname" />
        <ImageView
            android:id="@+id/iv_bankremind"
            android:src="@drawable/bankreminder"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_khr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:background="@drawable/selector_cell_left_blank"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s_component_height">
            <TextView
                android:textSize="@dimen/text_size_list"
                android:textColor="@color/text_color"
                android:id="@+id/tv_depositbank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:minWidth="96.0dip"
                android:text="@string/str199"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@id/textView4"
                android:paddingRight="16.0dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/icon_close"
                android:layout_alignParentRight="true" />
            <EditText
                android:textSize="@dimen/text_size_list"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:id="@+id/et_depositbank"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="10.0dip"
                android:hint="@string/str198"
                android:singleLine="true"
                android:layout_toLeftOf="@id/textView4"
                android:layout_toRightOf="@id/tv_depositbank"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:background="@drawable/selector_cell_left_blank"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s_component_height">
            <TextView
                android:textSize="@dimen/text_size_list"
                android:textColor="@color/text_color"
                android:id="@+id/tv_branchbank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:minWidth="96.0dip"
                android:text="@string/str197"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@id/textView4"
                android:paddingRight="16.0dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/icon_close"
                android:layout_alignParentRight="true" />
            <EditText
                android:textSize="@dimen/text_size_list"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:id="@+id/et_branchbank"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="10.0dip"
                android:hint="@string/str196"
                android:singleLine="true"
                android:layout_toLeftOf="@id/textView4"
                android:layout_toRightOf="@id/tv_branchbank"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:background="@drawable/selector_cell_left_blank"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s_component_height">
            <TextView
                android:textSize="@dimen/text_size_list"
                android:textColor="@color/text_color"
                android:id="@+id/tv_cardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:minWidth="96.0dip"
                android:text="@string/str195"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@id/textView4"
                android:paddingRight="16.0dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/icon_close"
                android:layout_alignParentRight="true" />
            <EditText
                android:textSize="@dimen/text_size_list"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:id="@+id/et_cardnum"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="10.0dip"
                android:hint="@string/str194"
                android:singleLine="true"
                android:layout_toLeftOf="@id/textView4"
                android:layout_toRightOf="@id/tv_cardnum"
                android:inputType="number" />
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:background="@drawable/selector_cell_left_blank"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s_component_height">
            <TextView
                android:textSize="@dimen/text_size_list"
                android:textColor="@color/text_color"
                android:id="@+id/tv_precardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:minWidth="96.0dip"
                android:text="@string/str193"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@id/textView4"
                android:paddingRight="16.0dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableRight="@drawable/icon_close"
                android:layout_alignParentRight="true" />
            <EditText
                android:textSize="@dimen/text_size_list"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_hint_color"
                android:id="@+id/et_precardnum"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="10.0dip"
                android:hint="@string/str192"
                android:singleLine="true"
                android:layout_toLeftOf="@id/textView4"
                android:layout_toRightOf="@id/tv_precardnum"
                android:inputType="number" />
        </RelativeLayout>
        <com.material.widget.PaperButton
            android:id="@+id/bt_editcard_submit"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/paper_height"
            android:layout_margin="10dp"
            app:paper_text="@string/str187" />
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:id="@+id/ll_itme"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:baselineAligned="false">

    <RelativeLayout
        android:id="@+id/layout_order"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:id="@+id/layout_choose"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_number"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_notes"
            android:textColor="@color/primary_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout_choose"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_notes"
            android:layout_toLeftOf="@+id/tv_time"
            android:textSize="16sp"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_time"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_confirm"
            android:textSize="16sp"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:clickable="false"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_pay_state"
            android:textSize="16sp"
            android:text="未确定"
            android:singleLine="true"
            android:ellipsize="end"
            android:clickable="false"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_pay_state"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_drop"
            android:textSize="16sp"
            android:text="已支付"
            android:singleLine="true"
            android:ellipsize="end"
            android:clickable="false"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/iv_drop"
            android:clickable="false"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:id="@+id/layout_open"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <Button
                android:id="@+id/btn_remove"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:background="@drawable/btn_corner_orange"
                android:textColor="#ffffff"
                android:text="作废"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="32dp" />


            <Button
                android:id="@+id/btn_complete"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:background="@drawable/btn_corner_orange"
                android:textColor="#ffffff"
                android:text="确定"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/btn_remove"
                android:layout_width="70dp"
                android:layout_height="32dp" />



            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/btn_edit"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:background="@drawable/btn_corner_orange"
                android:textColor="#ffffff"
                android:text="编辑"
                android:layout_marginBottom="2dp"
                android:layout_width="70dp"
                android:layout_height="32dp" />
            <Button
                android:textColor="#adadad"
                android:id="@+id/btn_print"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                android:text="打印"
                android:layout_toLeftOf="@+id/btn_edit"
                android:layout_width="70dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
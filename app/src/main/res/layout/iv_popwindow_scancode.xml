<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >
    <ImageView
        android:id="@+id/scanmoneysuccess"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/scanmoneysuccess"
        android:layout_width="120dp"
        android:layout_height="100dp" />
    <TextView
        android:text="￥99.99"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="25dp"
        android:textSize="32sp"
        android:id="@+id/tv_scanmoney"
        android:layout_below="@+id/scanmoneysuccess"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_scanmoney"
        android:orientation="vertical" >
        <Button
            android:id="@+id/btn_do_printe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/btn_corner_whitle"
            android:text="打印小票"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold" />
        <Button
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:id="@+id/btn_continue_scancode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/btn_corner_orange"
            android:textColor="#ffffff"
            android:text="继续收银"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>
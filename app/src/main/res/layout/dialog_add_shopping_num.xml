<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_num"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:text="@string/str118"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:paddingBottom="2dp"
        android:id="@+id/btn_add"
        android:background="@drawable/btn_corner_orange"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="＋"
        android:layout_toRightOf="@+id/et_num"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_width="23dp"
        android:layout_height="23dp" />
    <EditText
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/et_num"
        android:text="1"
        android:inputType="number"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#000000"
        android:background="@drawable/edit_bg"
        android:layout_width="60dp"
        android:layout_height="30dp" />
    <Button
        android:layout_toLeftOf="@+id/et_num"
        android:id="@+id/btn_cell"
        android:background="@drawable/btn_gragshape_white"
        android:textSize="14sp"
        android:textColor="#adadad"
        android:text="一"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_width="23dp"
        android:layout_height="23dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_below="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cell"
            android:background="@drawable/corner_gray"
            android:gravity="center"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp" />
        <TextView
            android:id="@+id/tv_sure"
            android:textColor="@color/white"
            android:background="@drawable/select_remove_red_background"
            android:gravity="center"
            android:text="@string/sure"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp" />
    </LinearLayout>

</RelativeLayout>
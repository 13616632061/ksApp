<RelativeLayout
    android:background="?gray_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/reportfragment_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">
        <ImageView
            android:id="@+id/iv_reportfragment_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_back_white"/>
        <TextView
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="250dp"
            android:layout_height="33dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerInParent="true"
            android:text="@string/business_statistics"/>
        <TextView
            android:id="@+id/tv_put_report"
            android:textSize="16dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:text="@string/reconciliation_export"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/select_report_layout"
        android:layout_below="@+id/reportfragment_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="33dp">
        <LinearLayout
            android:id="@+id/move_report"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/primary_color"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_move_report"
            android:text="@string/online_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <View
                android:id="@+id/move_report_view"
                android:layout_marginTop="5dp"
                android:background="@color/primary_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/cash_report"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_cash_report"
            android:gravity="center"
            android:text="@string/cash_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:visibility="invisible"
            android:id="@+id/cash_report_view"
            android:layout_marginTop="5dp"
            android:background="@color/primary_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/member_report"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_ember_report"
                android:gravity="center"
                android:text="@string/member_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:visibility="invisible"
                android:id="@+id/member_report_view"
                android:layout_marginTop="5dp"
                android:background="@color/primary_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@id/refresh_header"
        android:layout_below="@+id/select_report_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <ListView
            android:background="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:id="@id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:dividerHeight="@dimen/card_divider"
            android:drawSelectorOnTop="true"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:scrollbars="none"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>
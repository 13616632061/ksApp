<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_open_order_pay_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="@color/white"
    tools:context="com.ui.ks.OpenOrderPayCodeActivity">
    <include layout="@layout/toolbar" android:id="@id/toolbar_layout" />
    <ImageView
        android:id="@+id/iv_paycode"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/toolbar_layout"
        android:layout_centerHorizontal="true"
        android:background="@color/primary_color"
        android:layout_width="180dp"
        android:layout_height="180dp" />
    <TextView
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:id="@+id/tv_name"
        android:layout_below="@+id/iv_paycode"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_reality_price"
        android:textColor="@color/primary_color"
        android:textSize="25sp"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="ï¿¥32.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="#adadad"
        android:text="@string/str54"
        android:textSize="14sp"
        android:layout_below="@+id/tv_reality_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

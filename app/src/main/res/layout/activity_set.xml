<RelativeLayout android:background="?gray_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:id="@id/main"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/toolbar" android:id="@id/toolbar_layout" />

    <ScrollView
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="always"
        android:layout_below="@id/toolbar_layout" android:id="@id/scrollView1" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerHorizontal="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/set_line" android:id="@+id/set_push_item" />
            <include layout="@layout/set_line" android:id="@+id/set_net_item" />
            <include layout="@layout/set_line_spacer" />
            <include layout="@layout/set_line" android:id="@+id/set_cache_item" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

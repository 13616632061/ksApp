<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/select_whitle"
    android:layout_width="match_parent"
    android:minHeight="75dp"
    android:layout_height="75dp">
    <ImageView
        android:id="@+id/goods_photo"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_width="55dp"
        android:layout_height="55dp" />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/goods_photo"
        android:layout_toLeftOf="@+id/checkbox_good"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:text="核桃"
            android:singleLine="true"
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_good_stock"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#adadad"
            android:text="库存:"
            android:layout_below="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/tv_good_stock"
            android:id="@+id/tv_good_stocknum"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#adadad"
            android:text=""
            android:singleLine="true"
            android:layout_below="@+id/tv_goods_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_good_sales"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="#adadad"
            android:text="销量:"
            android:singleLine="true"
            android:layout_below="@+id/tv_goods_name"
            android:layout_toRightOf="@+id/tv_good_stocknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:layout_toRightOf="@+id/tv_good_sales"
            android:id="@+id/tv_good_salesnum"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#adadad"
            android:text=""
            android:singleLine="true"
            android:layout_below="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/primary_color"
            android:id="@+id/tv_good_price"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:text="￥18.00"
            android:layout_below="@+id/tv_good_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <CheckBox
        android:visibility="gone"
        android:id="@+id/checkbox_good"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
    android:focusable="false"
        android:layout_width="45dp"
        android:layout_height="45dp" />
    <Button
        android:paddingBottom="2dp"
        android:visibility="gone"
        android:id="@+id/btn_add"
        android:background="@drawable/btn_corner_orange"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="＋"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="23dp"
        android:layout_height="23dp" />
    <TextView
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:id="@+id/tv_num"
        android:text="1"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@+id/btn_add"
        android:layout_width="30dp"
        android:layout_height="wrap_content" />
    <EditText
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_centerVertical="true"
        android:id="@+id/et_num"
        android:text="1"
        android:singleLine="true"
        android:textColor="#000000"
        android:background="@drawable/edit_bg"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@+id/btn_add"
        android:layout_width="30dp"
        android:layout_height="wrap_content" />
    <Button
        android:visibility="gone"
        android:layout_toLeftOf="@+id/tv_num"
        android:id="@+id/btn_cell"
        android:background="@drawable/btn_gragshape_white"
        android:textSize="14sp"
        android:textColor="#adadad"
        android:text="一"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_width="23dp"
        android:layout_height="23dp" />
    <Button
        android:visibility="gone"
        android:layout_toLeftOf="@+id/et_num"
        android:id="@+id/btn_cell_et"
        android:background="@drawable/btn_gragshape_white"
        android:textSize="14sp"
        android:textColor="#adadad"
        android:text="一"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_width="23dp"
        android:layout_height="23dp" />
</RelativeLayout>

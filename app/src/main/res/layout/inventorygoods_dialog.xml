<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="100dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:layout_marginRight="@dimen/layout_x_10"
            android:layout_marginTop="@dimen/layout_x_10"
            android:maxLines="1"
            android:singleLine="true"
            android:text="商品名称"
            android:textSize="@dimen/layout_x_30" />

        <TextView
            android:id="@+id/tv_goods_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:layout_marginRight="@dimen/layout_x_10"
            android:layout_marginTop="@dimen/layout_x_10"
            android:maxLines="1"
            android:singleLine="true"
            android:text="条码"
            android:textSize="@dimen/layout_x_30" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:layout_marginRight="@dimen/layout_x_10"
            android:layout_marginTop="@dimen/layout_x_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:layout_marginRight="@dimen/layout_x_10"
                android:layout_marginTop="@dimen/layout_x_10"
                android:maxLines="1"
                android:singleLine="true"
                android:text="原库存："
                android:textSize="@dimen/layout_x_30" />

            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/layout_x_10"
                android:layout_marginRight="@dimen/layout_x_10"
                android:layout_marginTop="@dimen/layout_x_10"
                android:maxLines="1"
                android:singleLine="true"
                android:text="27"
                android:textSize="@dimen/layout_x_30" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:layout_marginRight="@dimen/layout_x_10"
            android:layout_marginTop="@dimen/layout_x_10"
            android:maxLines="1"
            android:singleLine="true"
            android:text="盘点库存："
            android:textSize="@dimen/layout_x_30" />


        <EditText
            android:id="@+id/ed_inventory_stock"
            android:layout_width="@dimen/layout_x_100"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:layout_marginRight="@dimen/layout_x_10"
            android:layout_marginTop="@dimen/layout_x_10"
            android:background="@drawable/edit_bg"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/layout_x_30" />


        <Button
            android:id="@+id/btn_add_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_corner_orange"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
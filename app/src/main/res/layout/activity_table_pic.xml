<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?gray_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" android:id="@+id/toolbar_layout"/>



    <LinearLayout
        android:layout_below="@+id/toolbar_layout"
        android:id="@+id/Rl_table"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_below="@+id/Rl_table"
            android:id="@+id/ed_table_num"
            android:layout_margin="5dp"
            android:lines="1"
            android:padding="5dp"
            android:textColor="@color/text_color"
            android:hint="@string/str258"
            android:background="@drawable/edit_bg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_generate"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:background="@drawable/btn_corner_orange"
            android:textColor="#ffffff"
            android:text="@string/str257"
            android:layout_width="70dp"
            android:layout_height="32dp" />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/mypaycaode_layout"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/layout_x_400"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_table_num"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_table"
            android:textSize="@dimen/layout_x_50"
            android:layout_margin="5dp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/layout_x_50"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <ImageView
            android:id="@+id/image_table"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_table_num"
            android:layout_width="@dimen/layout_x_200"
            android:layout_height="@dimen/layout_x_200" />


        <TextView
            android:visibility="gone"
            android:text="@string/str256"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/image_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_add_remarks"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:background="@drawable/btn_corner_orange"
        android:textColor="#ffffff"
        android:text="@string/tv_save"
        android:layout_marginBottom="20dp"
        android:layout_width="70dp"
        android:layout_height="32dp" />


</RelativeLayout>
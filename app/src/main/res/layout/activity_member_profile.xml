<RelativeLayout android:background="?gray_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:id="@id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/toolbar" android:id="@id/toolbar_layout" />
    <ScrollView
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="always"
        android:layout_below="@id/toolbar_layout"
        android:id="@id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">


            <!--姓名-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/linearLayout1"
                android:background="@drawable/selector_cell_left_blank"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="姓名" />
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@id/textView1"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:src="@drawable/ic_right_grey" />
            </LinearLayout>

            <!--手机号-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/linearLayout4"
                android:background="@drawable/selector_cell_left_blank"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="手机号" />
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@id/textView4"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:src="@drawable/ic_right_grey" />
            </LinearLayout>

            <!--固定电话-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/linearLayout5"
                android:background="@drawable/selector_cell_single_line"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="固定电话" />
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@id/textView5"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:src="@drawable/ic_right_grey" />
            </LinearLayout>

            <!--地区-->
            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/linearLayout8"
                android:background="@drawable/selector_cell_two_line_short"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="地区" />
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@id/textView15"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:src="@drawable/ic_right_grey" />
            </LinearLayout>
            <!--合作账号管理-->
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/linearLayout7"
                android:background="@drawable/selector_cell_single_line"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="地址" />
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@id/textView7"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:src="@drawable/ic_right_grey" />
            </LinearLayout>


            <!--修改密码-->
            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/linearLayout6"
                android:background="@drawable/selector_cell_two_line"
                android:paddingLeft="16.0dip"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s_component_height">
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="94.0dip"
                    android:text="修改密码" />
                <TextView
                    android:textSize="@dimen/text_size_list"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:gravity="right"
                    android:id="@id/textView6"
                    android:background="@null"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="1.0" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:src="@drawable/ic_right_grey" />
            </LinearLayout>


            <!--退出登录-->
            <com.material.widget.PaperButton
                android:id="@id/button1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/paper_height"
                android:layout_margin="10dp"
                app:paper_text="退出"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

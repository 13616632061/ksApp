<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/select_whitle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_x_70">
    <ImageView
        android:id="@+id/goods_photo"
        android:layout_marginLeft="@dimen/layout_x_10"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/layout_x_65"
        android:layout_height="@dimen/layout_x_65" />
    <RelativeLayout
        android:layout_marginRight="@dimen/layout_x_15"
        android:layout_marginLeft="@dimen/layout_x_10"
        android:layout_toRightOf="@+id/goods_photo"
        android:layout_toLeftOf="@+id/checkbox_good"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="@dimen/layout_x_5"
            android:textSize="@dimen/layout_x_20"
            android:text="核桃"
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_good_stock"
            android:layout_marginTop="@dimen/layout_x_5"
            android:textSize="@dimen/layout_x_16"
            android:textColor="#adadad"
            android:text="库存:"
            android:layout_below="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/tv_good_stock"
            android:id="@+id/tv_good_stocknum"
            android:layout_marginTop="@dimen/layout_x_5"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:textSize="@dimen/layout_x_16"
            android:textColor="#adadad"
            android:text=""
            android:singleLine="true"
            android:layout_below="@+id/tv_goods_name"
            android:layout_width="@dimen/layout_x_50"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_good_sales"
            android:layout_marginTop="@dimen/layout_x_5"
            android:layout_marginLeft="@dimen/layout_x_5"
            android:textSize="@dimen/layout_x_16"
            android:textColor="#adadad"
            android:text="销量:"
            android:layout_below="@+id/tv_goods_name"
            android:layout_toRightOf="@+id/tv_good_stocknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/tv_good_sales"
            android:id="@+id/tv_good_salesnum"
            android:layout_marginTop="@dimen/layout_x_5"
            android:layout_marginLeft="@dimen/layout_x_10"
            android:textSize="@dimen/layout_x_16"
            android:textColor="#adadad"
            android:text=""
            android:singleLine="true"
            android:layout_below="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/primary_color"
            android:id="@+id/tv_good_price"
            android:layout_marginBottom="@dimen/layout_x_5"
            android:textSize="@dimen/layout_x_25"
            android:text="￥18.00"
            android:layout_below="@+id/tv_good_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <CheckBox
        android:visibility="gone"
        android:id="@+id/checkbox_good"
        android:layout_marginRight="@dimen/layout_x_15"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/layout_x_45"
        android:layout_height="@dimen/layout_x_45" />
    <Button
        android:paddingBottom="@dimen/layout_x_2"
        android:visibility="gone"
        android:id="@+id/btn_add"
        android:background="@drawable/btn_corner_orange"
        android:textSize="@dimen/layout_x_22"
        android:textColor="#ffffff"
        android:text="＋"
        android:gravity="center"
        android:layout_marginRight="@dimen/layout_x_25"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/layout_x_30"
        android:layout_height="@dimen/layout_x_30" />
    <TextView
        android:visibility="gone"
        android:textSize="@dimen/layout_x_20"
        android:layout_centerVertical="true"
        android:id="@+id/tv_num"
        android:text="1"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@+id/btn_add"
        android:layout_width="@dimen/layout_x_40"
        android:layout_height="wrap_content" />
    <Button
        android:visibility="gone"
        android:layout_toLeftOf="@+id/tv_num"
        android:id="@+id/btn_cell"
        android:background="@drawable/btn_corner_gray"
        android:textSize="@dimen/layout_x_18"
        android:textColor="#ffffff"
        android:text="一"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/layout_x_30"
        android:layout_height="@dimen/layout_x_30" />
</RelativeLayout>
